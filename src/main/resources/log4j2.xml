<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE log4j:configuration>
<!-- Status determines which *internal* log4j log messages are included. -->
<Configuration status="WARN">
	<Appenders>
		<!-- Console Appender Configuration -->
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%5level: %m%throwable{short.message}%n"/>
		</Console>

		<!-- File Appender Configuration -->
		<File name="FileLog" fileName="debug.log" append="false">
			<PatternLayout pattern="[%03sequenceNumber %-5level] %thread at %file:%line - %msg%throwable{3}\n">
			</PatternLayout>
		</File>
	</Appenders>

	<Loggers>
		<!-- You can modify per-class logging levels if you want. -->
		<Logger name="edu.usfca.cs272.LoggerSetup" level="FATAL" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>

		<!-- This is the configuration used by all other loggers. -->
		<Root level="ALL">
			<AppenderRef ref="Console" level="INFO"/>
			<AppenderRef ref="FileLog" level="ALL"/>
		</Root>
	</Loggers>
</Configuration>